<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="200" prefWidth="400" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.selim.anime.controllers.UpdateAnimeController">
    <children>
        <VBox alignment="CENTER" prefHeight="200" prefWidth="400" spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label style="-fx-font-size: 18px;" text="update Anime" />
            <Label text="id:" />
         <TextField fx:id="idTf" promptText="Enter Name" />
         <Label text="Name:" />
            <TextField fx:id="nameTf" promptText="Enter Name" />
            <Label text="Type:" />
            <TextField fx:id="typeTf" promptText="Enter Type" />
         <Label text="created At" />
         <TextField fx:id="createAtTf" promptText="Enter Name" />
            <Button fx:id="updateBtn" onAction="#update" style="-fx-background-color: #00ff00;" text="update" />
            <Button fx:id="cancelBtn" onAction="#cancel" style="-fx-background-color: #ff0000;" text="Cancel" />
        </VBox>
    </children>
</AnchorPane>
